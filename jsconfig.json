{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "watch": true,
    "target": "es2015",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/*"],
      "@components/*": ["./app/components/*"]
    },
    
  },
  "include": [
    "./**/*.js",
    "./**/*.jsx",
    "./**/*.scss"
  ],
  "exclude": [
    "node_modules"
  ],
}